public class Magazzino {
	private Prodotto inizio;
	
	public Magazzino () {
		inizio = null;
	}
	
	public boolean esiste (String c) {
		Prodotto temp = inizio;
		while(temp.prox != null) {
			if (inizio.codice == c) {
				return true;
			}
			temp = temp.prox;
		}
		
		return false;
	}
	
	public void aggiornaMagazzino(String c, String d, int q) {
		if (esiste(c)) {
			Prodotto temp = inizio;
			while(temp.prox != null) {
				temp.desc = d;
				temp.quant = q;
				return;
			}
			temp = temp.prox;
		}
		Prodotto temp = inizio;
		while(temp.prox != null) {
			if (inizio.codice == c) {
				temp.prox = new Prodotto(c, d, q);
				return;
			}
			temp = temp.prox;
		}
	}
}
